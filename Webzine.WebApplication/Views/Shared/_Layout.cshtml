@model Webzine.WebApplication.ViewModels.BaseViewModel

<!DOCTYPE html>

<html>
    <head>
        <title>@ViewData["title"]</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="~/lib/font-awesome/css/all.css" rel="stylesheet">
        <link href="~/lib/js/bootstrap.bundle.min.js" rel="stylesheet">
        <link href="~/lib/bootstrap/js/bootstrap.bundle.min.js"></link>
    </head>

    <body>
        <style>
            a {
                text-decoration: none;
            }
        </style>

        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a asp-controller="home" class="navbar-brand">Webzine</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mynavbar">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a asp-controller="home" class="nav-link"><i class="fas fa-home"></i> Accueil</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"><i class="fas fa-tools"></i> Administration</a>
                            <ul class="dropdown-menu">
                                <li><a asp-area="admin" asp-controller="artist" class="dropdown-item"><i class="fas fa-users"></i> Artistes</a></li>
                                <li><a asp-area="admin" asp-controller="comment" class="dropdown-item"><i class="fas fa-comments"></i> Commentaires</a></li>
                                <li><a asp-area="admin" asp-controller="style" class="dropdown-item"><i class="fas fa-tags"></i> Styles</a></li>
                                <li><a asp-area="admin" asp-controller="title" class="dropdown-item"><i class="fas fa-music"></i> Titres</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="contact" class="nav-link"><i class="fas fa-envelope"></i> Contact </a>
                        </li>
                    </ul>
                    <form method="post" asp-controller="Search" class="form-inline my-2 my-lg-0">
                        <div class="input-group">
                            <input name="keyword" id="searchbar" class="form-control mr-sm-2" type="search" placeholder="Trouver un artiste / titre" aria-label="Trouver un artiste / titre" aria-describedby="search-addon">
                             <button type="submit" class="btn btn-primary my-2 my-sm-0"><i class="fas fa-search"></i></button>
                        </div>
                    </form>
                </div>
            </div>
        </nav>
        <section class="row" style="margin:0">
            <div class="col-md-9 p-3">
                @RenderBody()
            </div>

            <div class="col-md-3 p-3">
                <div class="text-center">
                    <h1>A propos</h1>
                    <p>Retrouvez les dernières pépites sur notre webzine.</p>

                </div>
                <div class="p-3">
                    <h1 class="text-center">Styles</h1>
                    <div>
                        <ul>
                            @foreach (var style in Model.Styles.ToList())
                                {
                                   <li><a asp-route-styleId="@style.IdStyle" asp-controller="StyleSearch">@style.Libelle</a></li>
                                    }
                        </ul>
                    </div>
                </div>
            </div>
        </section>
    </body>
    <footer class="bg-dark text-center text-lg-start">@*fixed-bottom to always have the footer at the bottom of the screen*@
        <div class="text-center p-3 text-light">
            DIIAGE 2024 D1-P3-E2
        </div>
    </footer>
</html>
