<div class="container">
    <div class="row">
        <h1><a href="#">@Model.Libelle</a> - @Model.Artiste.Nom</h1>
        <hr />
        <div class="row mt-4">
            <div class="col-xs-12 col-sm-3"><i class="fas fa-calendar"></i> Le @Model.DateCreation</div>
            <div class="col-xs-12 col-sm-3"><i class="fas fa-heart"></i> @Model.NbLikes</div>
            <div class="col-xs-12 col-sm-3"><i class="fas fa-tags"></i> Styles :
                <a href="#">
                    @foreach (var @style in @Model.TitresStyles)
                    {
                        @style.Libelle
                    }
                </a>
            </div>
            <div class="col-xs-12 col-sm-1"></div>
            <div class="col-xs-12 col-sm-1"><button type="button" class="btn btn-outline-primary"><i class="fas fa-thumbs-up"></i> Like</button></div>
            <div class="col-xs-12 col-sm-1"><a type="button" class="btn btn-outline-primary" href="#"><i class="fas fa-edit"></i> Edit</a></div>
        </div>
    </div>

    <br><br>

    <div class="row">
        <div class="col-md-12">
            <div class="col background-white py-3">
                <div class="clearfix">
                    <img style="height:300px; width: auto" src="@Model.UrlJaquette" class="img-fluid col-md-4 mb-3 ms-md-3 rounded float-sm-end" alt="...">
                    <div class="ml-3">
                        @Model.Chronique
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<br>
<br>

<div class="container">
    <div class="row embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/zpOULjyy-n8?rel=0" allowfullscreen></iframe>
    </div>
</div>
<br>
<br>

<div class="container">
    <h3>Give your opinion on this title</h3><br>
    <form>
        <div class="row">
            <div class="col-sm-6 col-lg-3">
                <label>Name</label>
            </div>

            <div class="col-xs-12 col-sm-6 col-lg-9">
                <input type="text" class="form-control" placeholder="Enter your name">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-6 col-lg-3">
                <label>Comment</label>
            </div>
            <div class="col-xs-12 col-sm-6 col-lg-9">
                <input type="text" class="form-control" placeholder="Write your comment">
                <br />
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </div>
    </form>

</div>
<br />
<br />
<div class="container">
    <div class="row">
        <h3>Comments</h3>
        <br>

        <div class="col-md-12">
            <div class="col background-white py-3">
                <div class="clearfix">
                    <img style="height:100px; width: auto" src="https://picsum.photos/100/100" class="img-fluid col-md-4 mb-3 me-3 ms-md-3 rounded float-sm-start" alt="...">
                    <h5>
                        Name - date
                    </h5>
                    Comment
                </div>
            </div>
        </div>
    </div>
</div>
