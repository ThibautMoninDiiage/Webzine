@model Webzine.WebApplication.ViewModels.SearchViewModel

<div class="container">
    <div class="row">
        <h1>Résultat de la recherche pour @Model.Keyword</h1>
        <hr />
    </div>
</div>



<div class="container">
    <h3>Artistes</h3>

    @foreach (var artiste in Model.Artistes)
    {
            var artistParameters = new Dictionary<string, string>();
            artistParameters.Add("IdArtiste", artiste.IdArtiste.ToString());

            <h5><i class="fas fa-user"></i> <a asp-controller="Artist" asp-all-route-data="artistParameters" asp>@artiste.Nom</a></h5>
    }

</div>

<br />
<br />
<div class="container">
    <h3>Titles</h3>

    @foreach (var titre in Model.Titres)
    {
        <div class="row mb-3">
            <div class="col-xs-12 col-sm-6 col-lg-2">
                <img style="height:150px; width: auto" class="img-fluid" src="@titre.UrlJaquette">
            </div>
            <div class="col-xs-12 col-sm-10">
                <div class="row">
                    @{ 
                        var artistParameters = new Dictionary<string, string>();
                        artistParameters.Add("IdArtiste", titre.Artiste.IdArtiste.ToString());
                    }

                    <h5><a asp-controller="Artist" asp-all-route-data="artistParameters">@titre.Artiste.Nom</a> - <a href="#">@titre.Libelle</a></h5>
                    <h5>Lenght</h5>
                </div>
            </div>
        </div>
    }

</div>
