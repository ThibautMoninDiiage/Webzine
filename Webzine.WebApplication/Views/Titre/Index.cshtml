@model Webzine.WebApplication.ViewModels.TitleViewModel

@{
    ViewData["title"] = "Titre";
}

<div>
    <br />
    <h1><a asp-controller="artiste" asp-route-IdArtiste="@Model.Titre.Artiste.IdArtiste">@Model.Titre.Artiste.Nom</a> - @Model.Titre.Libelle</h1>
    <hr />
    <div class="row mt-4">
        <div class="col-xs-12 col-sm-3"><i class="fas fa-calendar"></i> Le @Model.Titre.DateCreation.ToString("dd/M/yyyy à h:mm")</div>
        <div class="col-xs-12 col-sm-3"><i class="fas fa-heart"></i> @Model.Titre.NbLikes</div>
        <div class="col-xs-12 col-sm-3">
            <i class="fas fa-tags"></i> Styles :
            @foreach (var @style in @Model.Titre.TitresStyles)
            {
                <a asp-controller="StyleSearch" asp-route-styleId="@style.IdStyle">@style.Libelle</a>
            }
        </div>
        <div class="col-xs-12 col-sm-1"></div>
        <form method="post" asp-action="liker">
            <input name="idTitre" value="@Model.Titre.IdTitre" type="hidden"/>
            <div class="col-xs-12 col-sm-1"><button type="submit" class="btn btn-outline-primary"><i class="fas fa-thumbs-up"></i> Like</button></div>
        </form>
        <div class="col-xs-12 col-sm-1"><a type="button" asp-area="admin" asp-controller="Title" asp-action="Create"><i class="fas fa-edit"></i> Editer</a></div>
    </div>

    <br><br>

    <div class="col background-white py-3">
        <div class="clearfix">
            <img style="height:300px; width: auto" src="@Model.Titre.UrlJaquette" class="img-fluid col-md-4 mb-3 ms-md-3 rounded float-sm-end" alt="Jacquette Titre">
            <div class="ml-3">
                @Model.Titre.Chronique
            </div>
        </div>
    </div>
</div>

<br>
<br>

<div class="row embed-responsive embed-responsive-16by9">
    <iframe class="embed-responsive-item" src="@Model.Titre.UrlEcoute" allowfullscreen></iframe>
</div>

<br>
<br>

<h3>Donne ton avis sur ce titre</h3>
<br>
<form>
    <div class="row">
        <div class="col-sm-6 col-lg-3">
            <label>Nom</label>
        </div>

        <div class="col-xs-12 col-sm-6 col-lg-9">
            <input type="text" class="form-control" placeholder="Votre nom">
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-6 col-lg-3">
            <label>Commentaire</label>
        </div>
        <div class="col-xs-12 col-sm-6 col-lg-9">
            <input type="text" class="form-control" placeholder="Votre commentaire">
            <br />
            <a href="#" class="btn btn-primary">Envoyer</a>
        </div>
    </div>
</form>

<br />
<br />

<h3>Commentaires</h3>
<br>

<div class="col background-white py-3">
    <div class="clearfix">
        <img style="height:100px; width: auto" src="https://picsum.photos/100/100" class="img-fluid col-md-4 mb-3 me-3 ms-md-3 rounded float-sm-start" alt="Image Profil">
        <h5>
            @foreach (var @commentaire in @Model.Titre.Commentaires)
            {
                <span>@commentaire.Auteur,</span>
                <span> le @commentaire.DateCreation</span>
            }
        </h5>
        @foreach (var @commentaire in @Model.Titre.Commentaires)
        {
            <span>@commentaire.Contenu</span>
        }
    </div>
</div>

