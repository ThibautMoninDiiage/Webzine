
@model Webzine.WebApplication.Areas.Admin.ViewModels.ArtistViewModel

@{
    ViewData["title"] = "Artistes";
}

        <h1>Artistes</h1>
        <hr />
        <a asp-action="create" class="btn btn-primary btn-lg col-md-3 mb-3"><i class="fas fa-plus"></i> Ajouter un nouvel artiste</a>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="table-secondary" scope="col">Nom de l'artiste</th>
                    <th class="text-center table-secondary" scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var artiste in Model.Artistes)
                {
                    <tr>
                        <td>@artiste.Nom</td>

                        <td class="text-center">
                            <a asp-action="edit" asp-route-idArtiste="@artiste.IdArtiste"> <i class="fas fa-edit"></i> </a>
                            <a asp-action="delete" asp-route-idArtiste="@artiste.IdArtiste"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>


