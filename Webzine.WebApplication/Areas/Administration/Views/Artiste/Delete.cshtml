@model Webzine.WebApplication.Areas.Admin.ViewModels.ArtistViewModel
@{
    ViewData["title"] = "Suppression artiste";
}

<div>
    <form method="post" asp-action="Delete">
        <h1>Supprimer un artiste</h1>
        <hr />
        <p>Etes-vous sur de vouloir supprimer l'artiste "@Model.Artiste.Nom" ?</p>
        <input name="IdArtiste" value="@Model.Artiste.IdArtiste" type="hidden"/>
        <button type="submit" class="btn btn-danger btn-lg">Supprimer</button>
    </form>
</div>
<br /><br /><br />
<a asp-controller="artistes" asp-action="">Retour à l'administration des artistes</a>