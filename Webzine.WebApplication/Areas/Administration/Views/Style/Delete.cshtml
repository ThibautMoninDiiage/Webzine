@model Webzine.WebApplication.Areas.Admin.ViewModels.StyleViewModel


@{
    ViewData["title"] = "Suppression style";
}


<div class="container">
    <div class="row">
        <div>
            <form method="post" asp-action="Delete">
                <h1>Supprimer un style</h1>
                <hr />
                <h3>Etes vous sur de vouloir supprimer le style de musique "@Model.Style.Libelle" ?</h3>
                <br />
                <input type="hidden" name="idStyle" value="@Model.Style.IdStyle" />
                <button type="submit" class="btn btn-danger btn-lg">Supprimer</button>
            </form>
        </div>
        <br /><br /><br />
        <a asp-action="">Retour à l'administration des styles</a>
    </div>
</div>

