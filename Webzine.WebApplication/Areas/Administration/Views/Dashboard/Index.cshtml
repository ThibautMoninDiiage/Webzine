@model Webzine.WebApplication.Areas.Administration.ViewModels.DashboardViewModel

@{
    ViewData["title"] = "Tableau de bord";
}

<h1>Tableau de bord</h1>

<section class="container text-center">
        <div class="row">
        <div class="col-lg-4 bg-light text-center p-4 m-2"><i class="fas fa-users h1 text-primary"></i><p class="h1 text-primary">@Model.NbArtistes</p><p class="text-primary">artistes</p></div>
        <div class="col-lg-3 bg-light text-center p-4 m-2"><i class="fas fa-user h1 text-primary"></i><p class="h1 text-primary">@Model.ArtistePlusChronique.Nom</p><p class="text-primary">artiste le plus chroniqué</p></div>
        <div class="col-lg-4 bg-light text-center p-4 m-2"><i class="fas fa-trophy h1 text-primary"></i><p class="h1 text-primary">@Model.ArtistePlusTitreAlbumsDistincts.Nom</p><p class="text-primary">artiste avec le plus de titres provenant d'albums distincts</p></div>
    </div>
    <div class="row">
        <div class="col-lg-4 bg-light text-center p-4 m-2"><i class="fas fa-book h1 text-primary"></i><p class="h1 text-primary">@Model.NbBiographies</p><p class="text-primary">biographies d'artistes</p></div>
        <div class="col-lg-3 bg-light text-center p-4 m-2"><i class="fas fa-compact-disc h1"></i><p class="h1">@Model.TitreLePlusVu.Artiste.Nom - @Model.TitreLePlusVu.Libelle</p><p>titre le plus vu</p></div>
        <div class="col-lg-4 bg-light text-center p-4 m-2"><i class="fas fa-book h1 text-primary"></i><p class="h1 text-primary">@Model.NbTitres</p><p class="text-primary">titres</p></div>
    </div>
    <div class="row">
        <div class="col-lg-4 bg-light text-center p-4 m-2"><i class="fas fa-book h1 text-primary"></i><p class="h1 text-primary">@Model.NbStyles</p><p class="text-primary">styles de musique</p></div>
        <div class="col-lg-3 bg-light text-center p-4 m-2"><i class="fas fa-book h1"></i><p class="h1">@Model.NbLectures</p><p">lectures</p></div>
        <div class="col-lg-4 bg-light text-center p-4 m-2"><i class="fas fa-book h1"></i><p class="h1">@Model.NbLikes</p><p>likes</p></div>
    </div>
</section>

