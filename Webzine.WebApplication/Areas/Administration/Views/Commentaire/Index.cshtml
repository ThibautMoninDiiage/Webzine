@model Webzine.WebApplication.Areas.Admin.ViewModels.CommentViewModel

@{
    ViewData["title"] = "Commentaires";
}


        <h1>Commentaires</h1>
        <hr />

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="table-secondary" scope="col">Titre</th>
                    <th class="table-secondary" scope="col">Nom</th>
                    <th class="table-secondary" scope="col">Commentaire</th>
                    <th class="table-secondary" scope="col">Date de création</th>
                    <th class="text-center table-secondary" scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Commentaires != null)
                {
                    @foreach (var commentaire in Model.Commentaires)
                    {
                        <tr>
                            <td><a asp-area="" asp-controller="titre" asp-route-IdTitre="@commentaire.Titre.IdTitre">@commentaire.Titre.Artiste.Nom - @commentaire.Titre.Libelle</a></td>
                            <td>@commentaire.Auteur</td>
                            <td>@commentaire.Contenu</td>
                            <td class="text-center">@commentaire.DateCreation</td>
                            <td class="text-center">
                                <a asp-action="delete" asp-route-idCommentaire="@commentaire.IdCommentaire"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
