<!DOCTYPE html>

<html>
<head>
    <title>@ViewData["title"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <style>
        a {
            text-decoration: none;
        }
    </style>

    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container-fluid">
            <a asp-controller="home" class="navbar-brand">Webzine</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mynavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a asp-area="" asp-controller="home" class="nav-link"><i class="fas fa-home"></i> Accueil</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"><i class="fas fa-tools"></i> Administration</a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="artist" class="dropdown-item"><i class="fas fa-users"></i> Artistes</a></li>
                            <li><a asp-controller="comment" class="dropdown-item"><i class="fas fa-comments"></i> Commentaires</a></li>
                            <li><a asp-controller="style" class="dropdown-item"><i class="fas fa-tags"></i> Styles</a></li>
                            <li><a asp-controller="title" class="dropdown-item"><i class="fas fa-music"></i> Titres</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="contact" class="nav-link"><i class="fas fa-envelope"></i> Contact </a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <div class="input-group">
                        <input class="form-control mr-sm-2" type="search" placeholder="Trouver un artiste / titre" aria-label="Trouver un artiste / titre" aria-describedby="search-addon">
                        <button class="btn btn-primary my-2 my-sm-0" type="submit" id="search-addon"><i class="fas fa-search"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </nav>
    <section class="row" style="margin:0">
        <div class="p-3">
            @RenderBody()
        </div>

    </section>
</body>
<footer class="bg-dark text-center text-lg-start">
    <div class="text-center p-3 text-light">
        DIIAGE 2024 D1-P3-E2
    </div>
</footer>
</html>
