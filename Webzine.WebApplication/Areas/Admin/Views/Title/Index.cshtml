@model Webzine.WebApplication.Areas.Admin.ViewModels.TitleViewModel

<div class="container">
    <div class="row">
        <h1>Titres </h1>
        <hr />
        <a class="btn btn-primary btn-lg col-md-3 mb-3"><i class="fas fa-plus"></i> Ajouter un nouveau titre</a>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="table-secondary" scope="col">Artiste</th>
                    <th class="table-secondary" scope="col">Titre</th>
                    <th class="table-secondary" scope="col">Durée</th>
                    <th class="table-secondary" scope="col">Date de sortie</th>
                    <th class="table-secondary" scope="col">v</th>
                    <th class="table-secondary" scope="col">l</th>
                    <th class="table-secondary" scope="col">c</th>
                    <th class="text-center table-secondary" scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var titre in Model.Titres)
                {
                    <tr>
                        <td>@titre.Artiste.Nom</td>
                        <td>@titre.Libelle</td>
                        <td>@titre.Duree</td>
                        <td>@titre.DateSortie</td>
                        <td>@titre.NbLectures</td>
                        <td>@titre.NbLikes</td>
                        <td>@titre.Commentaires.Count</td>


                        <td class="text-center">
                            <a asp-action="Create"> <i class="fas fa-edit"></i> </a>
                            <a asp-action="Delete"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>



