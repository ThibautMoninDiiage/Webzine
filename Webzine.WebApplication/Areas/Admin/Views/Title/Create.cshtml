@{
    ViewData["title"] = "Admin - Titres - Création";
}

<div class="container">
    <div class="row">
        <div>
            <h1>Créer un titre</h1>
            <hr />
        </div>
        <form>
            <div class="row mb-4">
                <div class="col-sm-6 col-lg-2">
                    <label>Nom de l'artiste</label>
                </div>

                <div class="col-xs-12 col-sm-6 col-lg-10">
                    <input type="text" class="form-control" placeholder="">
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-sm-6 col-lg-2">
                    <label>Titre</label>
                </div>

                <div class="col-xs-12 col-sm-6 col-lg-10">
                    <input type="text" class="form-control" placeholder="">
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-sm-6 col-lg-2">
                    <label>Album</label>
                </div>

                <div class="col-xs-12 col-sm-6 col-lg-10">
                    <input type="text" class="form-control" placeholder="">
                </div>
            </div>


            <div class="row mb-4">
                <div class="col-sm-6 col-lg-2">
                    <label>Chronique</label>
                </div>

                <div class="col-xs-12 col-sm-6 col-lg-10">
                    <textarea type="text" class="form-control" placeholder=""></textarea>
                </div>
            </div>


            <div class="row mb-4">
                <div class="col-sm-3 col-lg-1">
                    <label>Date de sortie</label>
                </div>

                <div class="col-xs-6 col-sm-3 col-lg-5">
                    <input type="date" class="form-control" placeholder="">
                </div>

                <div class="col-sm-3 col-lg-1">
                    <label>Durée en seconde</label>
                </div>

                <div class="col-xs-6 col-sm-3 col-lg-5">
                    <input type="number" class="form-control" placeholder="">
                </div>
            </div>




            <br />
            <br />
            <div class="row">
                <div class="col-sm-6 col-lg-2">
                </div>
                <div class="col-xs-12 col-sm-6 col-lg-10">
                    <a asp-action="" class="btn btn-primary">Sauvegarder</a>
                </div>
            </div>
            <br />
            <a asp-action="">Retour à l'administration des titres</a>
        </form>
    </div>
</div>